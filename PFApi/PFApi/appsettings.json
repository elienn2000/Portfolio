{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [ "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information"
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/webapi-.log",
                    "rollingInterval": "Day",
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
                }
            }
        ]
    },
    "JWTUser": {
        "Secret": "ThisIsAVeryStrongSecretKey_ForJWT_Token_Encryption_2025!!",
        "Issuer": "https://localhost:33333/",
        "RefreshTokenValidMinutes": 300, // 5 hours only for demo purpose
        "TokenValidMinutes": 5 // 5 minutes only for demo purpose
    },
    "ConnectionStrings": {
        "DefaultConnection": "Data Source=Data/portfolio.db"
    }


}
